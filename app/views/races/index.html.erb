<h1>Races</h1>

<%= link_to "New Race", new_race_path, class: "btn btn-primary" %>
<section class="race_cards">
  <% @races.each do |race| %>
    <div class="race_card">
      <h2>Race: <%= race.name %></h2>
      <hr>
      <p>Number of Participants: <%= race.race_participants.count %></p>
      <h3>Participants</h3>
      <div class="card_participants">
          <table>
            <thead>
              <tr>
                <th>Student</th>
                <th>Lane</th>
                <th>Place</th>
              </tr>
            </thead>
            <tbody>
              <% race.race_participants.each do |race_participant| %>
                <tr>
                  <td><%= race_participant.student.name %></td>
                  <td><%= race_participant.lane %></td>
                  <td><%= race_participant.place ? race_participant.place : "TBD" %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
      <div class="card_actions">
        <%= link_to race_path(race), class: "btn btn-secondary" do %>
          <i class="fa-solid fa-eye"></i>
        <% end %>

        <%= link_to edit_race_path(race), class: "btn btn-warning" do %>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>

        <%= link_to race, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    </div>
    <% end %>
</section>

<% if @races.empty? %>
  <p>No races found. Add a new race to get started.</p>
<% end %>
