<h1>Race Details</h1>

<p>
  <strong>Name:</strong>
  <%= @race.name %>
</p>

<% if @race.race_participants.any? %>
  <h2>Participants</h2>
  <table>
    <thead>
      <tr>
        <th>Student</th>
        <th>Lane</th>
        <th>Place</th>
      </tr>
    </thead>
    <tbody>
      <!-- Order by lane or place as you prefer -->
      <% @race.race_participants.order(:lane).each do |participant| %>
        <tr>
          <!-- Show the student name, if present -->
          <td><%= participant.student&.name %></td>
          <td><%= participant.lane %></td>
          <td><%= participant.place %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No participants have been assigned yet.</p>
<% end %>

<div class="actions">
  <%= link_to "Edit", edit_race_path(@race), class: "btn btn-warning" %>
  <%= link_to "Delete", @race, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
  <%= link_to "Back to Races", races_path, class: "btn btn-secondary" %>
</div>
